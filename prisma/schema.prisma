generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Pet {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  v          Int      @map("__v")
  age        Int
  animalType String
  createdAt  DateTime @db.Date
  gender     String
  image      String
  name       String
  ownerId      String   @db.ObjectId
  species    String
  updatedAt  DateTime @db.Date
  owner User @relation(fields: [ownerId], references: [id], onDelete:Cascade)
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  v         Int      @map("__v")
  createdAt DateTime @db.Date
  email     String
  gender    String
  isAdmin   Boolean
  password  String
  updatedAt DateTime @db.Date
  username  String   @unique(map: "username_1")
  pets      Pet[]
}

model Vet {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  v                 Int      @map("__v")
  createdAt         DateTime @db.Date
  degreeImage       String
  email             String
  fieldOfStudy      String
  gender            String
  isApproved        Boolean
  licenseImage      String
  password          String
  specializations   String[]
  university        String
  updatedAt         DateTime @db.Date
  username          String   @unique(map: "username_1")
  yearsOfExperience Int
}
